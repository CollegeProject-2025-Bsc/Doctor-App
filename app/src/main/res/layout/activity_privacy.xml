<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".VIEW.Privacy">

    <TextView
        android:paddingTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:capitalize="words"
        android:fontFamily="sans-serif-black"
        android:text="This App is designed by Subho Das, Nabajit Basak, Soumyodeep Saha for college project purpose. By this app a user can search and book a doctor plus he can maintain his profile also"
        android:textColor="@color/text_color"
        android:textSize="15dp"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ivLottie"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="restart"
            app:lottie_loop="true"
            />
    </LinearLayout>
    
</LinearLayout>